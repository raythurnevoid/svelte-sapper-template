{
	"name": "@raythurnevoid/svelte-sapper-template",
	"description": "Svelte template with Sapper, Webpack, SCSS Modules and Typescript",
	"version": "0.0.6",
	"scripts": {
		"webpack": "cross-env TS_NODE_PROJECT=\"tsconfig.tsnode.json\" webpack",
		"clean": "del-cli dist",
		"dev": "cross-env TS_NODE_PROJECT=\"tsconfig.tsnode.json\" ts-node node_modules/sapper/dist/cli.js dev",
		"build": "sapper build",
		"analyze": "npm run webpack -- --env analyzeBundle --config webpack.config.analyze.ts",
		"analyze:prod": "npm run analyze -- --env production",
		"stats": "npm run webpack -- --config webpack.config.analyze.ts --json=stats.json",
		"stats:prod": "npm run stats -- --env production",
		"export": "sapper export",
		"start": "node __sapper__/build",
		"debug": "cross-env TS_NODE_PROJECT=\"tsconfig.tsnode.json\" node --inspect -r ts-node/register -r tsconfig-paths/register node_modules/sapper/dist/cli.js dev",
		"validate": "svelte-check --ignore src/node_modules/@sapper",
		"clean-lib": "del-cli lib",
		"copy": "copyfiles ./build/**/*.* package.json tsconfig.json webpack* svelte.config.js lib",
		"tsc": "tsc -p tsconfig.lib.json",
		"lib": "npm-run-all clean-lib copy tsc",
		"prepackage": "npm run lib",
		"package": "npm publish ./lib --access public"
	},
	"browserslist": [
		"defaults and supports es6-module"
	],
	"dependencies": {
		"compression": "^1.7.4",
		"polka": "next",
		"sirv": "^1.0.10",
		"@raythurnevoid/svelte-template": "^0.0.14",
		"sapper": "https://github.com/raythurnevoid/sapper/releases/download/0.28.10.webpack5-fix-log/raythurnevoid-sapper-0.28.1-0.webpack5-fix-log.tgz"
	},
	"devDependencies": {
		"@types/compression": "^1.7.0",
		"@types/polka": "^0.5.2",
		"autoprefixer": "^10.2.3",
		"copyfiles": "^2.4.1"
	}
}
